# BTC Monitor Configuration
# Copy this file to .env and customize your settings
# All parameters have sensible defaults if not specified

# Timezone (Required)
TZ=America/Sao_Paulo

# === TRADING SYMBOL (Required) ===
# Single symbol: SYMBOL=BTCUSDT
# Multiple symbols (comma-separated): SYMBOL=BTCUSDT,BNBUSDT,ETHUSDT
SYMBOL=BTCUSDT

# === TELEGRAM NOTIFICATIONS (Required) ===
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN="your_bot_token_here"
TELEGRAM_CHAT_ID="your_chat_id_here"

###########################
### OPTIONAL PARAMETERS ###
###########################

# === DETECTION PARAMETERS ===
MIN_DROP=5.0              # Alert when price drops 5% in 24h
MA_DISTANCE=3.0           # Alert when price is 3% below moving average
RSI_OVERSOLD=30           # RSI below 30 = oversold
MA_PERIOD=7               # 7-day moving average

# === RISK MANAGEMENT ===
STOP_LOSS=3.0             # 3% stop loss
TAKE_PROFIT=2.0           # Minimum 2% profit target (threshold)
MAX_TAKE_PROFIT=5.0       # Maximum 5% profit target (cap for conservative approach)
RESISTANCE_FACTOR=0.6     # Use 60% distance to resistance (0.5-0.7 recommended)

# === MONITORING ===
CHECK_INTERVAL=300        # Check every 5 minutes (in seconds)
HISTORICAL_DAYS=90        # Days of historical data to analyze
